<body style="background-image:url(/content/image/background2.png)">
	<!-- Start: Content -->
	<div class="container-fluid content">
		<div class="row">
			<!-- Main Page -->
			<div class="body-login">
				<div class="center-login">
					<div class="panel panel-login">
						<div class="panel-title-login text-right">
							<h2 class="title"><i class="fa fa-user"></i>登录</h2>
						</div>
						<div class="panel-body">
							<form id="login" onsubmit="return false;">
								<div class="form-group">
									<label>用户名</label>
									<div class="input-group input-group-icon">
										<input name="yhm" id="yhm" type="text" class="form-control bk-noradius" placeholder="请输入用户名" />
										<span class="input-group-addon">
											<span class="icon">
												<i class="fa fa-user"></i>
											</span>
										</span>
									</div>
								</div>

								<div class="form-group">
									<label>密码</label>
									<div class="input-group input-group-icon">
										<input name="mm" id="mm" type="password" class="form-control bk-noradius" placeholder="请输入密码" />
										<span class="input-group-addon">
											<span class="icon">
												<i class="fa fa-lock"></i>
											</span>
										</span>
									</div>
								</div>

								<br />
								<div class="row">
									<div class="col-sm-4 text-right" style="width:100%">
										<button onClick="tologin()" id="join" type="button" class="btn btn-primary hidden-xs">登录</button>
										<button onClick="tologin()" id="join" type="button" class="btn btn-primary btn-block btn-lg visible-xs bk-margin-top-10">登录</button>
									</div>
								</div>
								<br />

							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- End Main Page -->



		</div>
	</div><!--/container-->
	<link rel="stylesheet" href="/kendoui/styles/kendo.common.min.css" />
	<link rel="stylesheet" href="/kendoui/styles/kendo.silver.min.css" />
	<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" id="layuicss-layer" href="/layui/css/modules/layer/default/layer.css" media="all">
	<link rel="stylesheet" href="/css/SmartFrame.css" />
	<script src="/js/core.min.js"></script>
	<script src="/lib/jquery/dist/jquery.js"></script>
	<script src="/kendoui/js/kendo.all.min.js"></script>
	<script src="/js/SmartFrame.js"></script>
	<script src="/js/layer.js"></script>
	
	<script>
		function tologin() { 
			var yhm = $("#yhm").val();
			var mm = $("#mm").val();
			if (yhm == null) {
				$.modalMsg("请填写用户名!", "error");
				$("#yhm").focus();
				return false;
			}
			if (mm == null) { 
				$.modalMsg("请填写用户密码!", "error");
				$("#mm").focus();
				return false;
			}
			$.ajax({
				url: "/hou/HTDL/htlogin?data=" + new Date().getTime(),
				data: $("#login").serialize(),
				success: function (data) { 
					if (data == "success") {
						window.location.href = "/hou/SHTZ/sh";
					} else { 
						$.modalMsg("用户名或密码错误!", "error");
					}
				}
			})
		}
	</script>
	<!-- end: JavaScript-->
</body>

</html>
