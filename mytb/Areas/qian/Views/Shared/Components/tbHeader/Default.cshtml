<script>
	$(function () {
		$(".u_member").hover(function (event) {
			var obj = $(event.target);
			if (!obj.hasClass("u_member")) {
				obj = obj.parents(".u_member");
			}
			obj.find(".u_dd1").show();
			obj.css("right", "10px");
		}, function (event) {
			var obj = $(event.target);
			if (!obj.hasClass("u_member")) {
				obj = obj.parents(".u_member");
			}
			obj.find(".u_dd1").hide();
			obj.css("right", "10px");
		});
		//手动退出登录之后，应该删除cookie不允许自动登录
		$("#Logout").click(function () {
			try {
				//重复引用jquery会导致cookie插件失效,这里用try catch
				//如果报错则重新加载js
				$.cookie("yhm", "", { expires: 7, path: '/' });
				$.cookie("mm", "", { expires: 7, path: '/' });
				window.location = "/qian/User/Logout";
			} catch (err) {
				var script = document.createElement("script");
				script.type = "text/javascript";
				script.src = "/content/js/lr/jquery.cookie.js";
				document.getElementsByTagName("head")[0].appendChild(script);
				//js加载完成之后 重新删除cookie
				script.onload = function () {
					$.cookie("yhm", "", { expires: 7, path: '/' });
					$.cookie("mm", "", { expires: 7, path: '/' });
					window.location = "/qian/User/Logout";
				}
			}
		})
	})
</script>