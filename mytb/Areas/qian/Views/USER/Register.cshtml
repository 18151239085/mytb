	<script>
		$(".aaa").hover(function (event) {
			obj = $(event.target)
			obj.css("color", "#5F9EA0");
			obj.parent().parent().css("border", "1px solid green");
		}, function () {
			obj = $(event.target)
			obj.css("color", "rgb(51,51,51)");
			obj.parent().parent().css("border", "");
			});
		function register() { 
			var yhm = $("#yhm").val();
			if (yhm=="") { 
				alert("请你将信息填全，便于后期能够联系到你");
				$("#yhm").focus();
				return false;
			}
			var sjh = $("#sjh").val();
			if (sjh == "") {
				alert("请你将信息填全，便于后期能够联系到你");
				$("#sjh").focus();
				return false;
			}
			var mm = $("#mm").val();
			if (mm == "") {
				alert("请你将信息填全，便于后期能够联系到你");
				$("#mm").focus();
				return false;
			}
			$.ajax({
				url: "/qian/USER/DORegister",
				data: $("#register").serialize(),
				success: function (data) {
					if (data) {
						alert("你已注册成功，请去登录");
						window.location.href = "/qian/USER/Login";
					} else {
						alert("用户名已存在，请重新输入");
					}
				}
			});
		}
	</script>
