<body style="background-image:url(/content/image/background2.png)">
	<!-- Start: Content -->
	<div class="container-fluid content">
		<div class="row">
			<!-- Main Page -->
			<div class="body-register">
				<div class="center-register">
					<div class="panel panel-register">
						<div class="panel-title-register" style="display:inline-block;width:100%">
							<h2 class="title" style="background:white;width:49%;padding-left:80px;padding-bottom:10px;">
								<span><a class="aaa" href="/qian/USER/Login">登录</a></span>
							</h2>
							<h2 class="title" style="background:white;width:49%;padding-left:40px;padding-bottom:10px;">
								<span><a class="aaa" href="/qian/USER/Register">注册</a></span>
							</h2>
						</div>
						<div class="panel-body" style="border-top:1px solid white;">
							<form id="register" style="padding-top:15px;" onsubmit="return false;">

								<div class="form-group">
									<div class="row">
										<div class="col-sm-12">
											<label>用户名</label>
											<input id="yhm" name="yhm" type="text" class="form-control" placeholder="请设置用户名" />
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-12">
											<label>手机号</label>
											<input id="sjh" name="sjh" type="text" class="form-control" placeholder="可用于登录和找回密码" />
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-12">
											<label>密码</label>
											<input id="mm" name="mm" type="password" class="form-control" placeholder="请设置登录密码" />
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-8">
										<div class="checkbox-custom checkbox-default">
											<input id="AgreeTerms" name="agreeterms" type="checkbox" />
											<label for="AgreeTerms">我同意 <a href="#"><small>使用条款</small></a></label>
										</div>
									</div>

								</div>
								<div class="row">
									<div class="col-sm-12">
										<button class="btn btn-primary hidden-xs bk-margin-top-10" onclick="register()" style="width:300px;height:50px;margin-left:50px;">注册</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
