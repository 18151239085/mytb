	<script>

		$(".aaa").hover(function (event) {
			obj = $(event.target)
			obj.css("color", "#5F9EA0");
			obj.parent().parent().css("border", "1px solid green");
		}, function () {
			obj = $(event.target)
			obj.css("color", "rgb(51,51,51)");
			obj.parent().parent().css("border", "");
		});
		$(function () {//文档加载的时候就看本地计算机cookie里面是否有用户名和密码，如果有，就自动登录
			yhm = $.cookie("yhm");
			mm = $.cookie("mm");
			if (yhm != null && yhm != "" && mm != null && mm != "") {
				$("#yhm").val(yhm);
				$("#mm").val(mm);
				login();
			}
		});
		function login() {
			var yhm = $("#yhm").val();
			if (yhm == "") {
				$.modalMsg("请输入用户名!", 'error');
				$("#yhm").focus();
				return false;
			}
			var mm = $("#mm").val();
			if (mm == "") {
				$.modalMsg("请输入密码!", 'error');
				$("#mm").focus();
				return false;
			}
			$.ajax({
				url: "/qian/USER/DOLogin?date=" + new Date().getTime(),
				data: $("#login").serialize(),
				success: function (data) {
					if (data == "success") {
						var isChecked = $("#ck_rmbUser").attr("checked");
						if (isChecked) {//登录成功勾选了，则把用户名和密码记住，存入cookie
							$.cookie("yhm", $("#yhm").val(), { expires: 7, path: "/" });
							$.cookie("mm", $("#mm").val(), { expires: 7, path: "/" });
						} else { //登录成功没有勾选，不管以前有木有登录过，本次没有勾选，就把cookie里面的用户名和密码删除掉
							$.cookie("yhm", "", { expires: 7, path: "/" });
							$.cookie("mm", "", { expires: 7, path: "/" });
						}
						window.location.href = "/qian/Home/index";
					} else {
						$.modalMsg("用户名或密码错误", 'error');
						return false;
					}
				}
			});

		}
	</script>
