	<script>
		$(".YC").hover(function (event) {
			var obj = $(event.target);
			if (!obj.hasClass("YC")) {
				obj = obj.parents(".YC");
			}
			obj.find(".fa").hide();
			obj.find(".sp").show();
		}, function (event) {
			var obj = $(event.target);
			if (!obj.hasClass("YC")) {
				obj = obj.parents(".YC");
			}
			obj.find(".fa").show();
			obj.find(".sp").hide();
		});
		//swiper
		var swiper = new Swiper('#swiper-single', {
			loop: true,
			speed: 600,
			grabCursor: true,
			parallax: true,
			autoplay: {
				delay: 3000,
				disableOnInteraction: false,
			},
			pagination: {
				el: '.swiper-pagination',
				clickable: true,
				renderBullet: function (index, className) {
					return '<span class="' + className + '">' + (index + 1) + '</span>';
				},
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
		});
		$(document).ready(function () {
			kendo.culture("zh-CN");
			$("#gridList").SmartGrid({
				dataSource: {
					batch: true,
					schema: {
						data: "Data",
						total: "Total"
					},
					transport: {
						type: "odata",
						read: {
							url: "/qian/home/gettzlist",
							contentType: "application/json",
							type: "POST"
						}, parameterMap: function (data, operation) {
							return JSON.stringify(data)
						},
					},
					//filter: { field: "F_LAYERS", operator: "eq", value: 1 }
				},
				height: 840,
				groupable: false,
				sortable: true,
				pageable: {
					refresh: true,
					pageSizes: true,
					buttonCount: 5
				},
				columns: [{
					field: "rowNumber",
					title: "序号",
					template: "<span class='row-number'></span>", width: 50
				},
				{
					field: "bt",
					title: "标题",
					template: '<a href="/qian/ftz/tail?keyValue=#:id#">#: bt #</a>',
					width: 200
				},
				{
					field: "sj",
					title: "时间",
					width: 100
				}

				],
				dataBound: function () {
					var rows = this.items();
					$(rows).each(function () {
						var index = $(this).index() + 1;
						var rowLabel = $(this).find(".row-number");
						$(rowLabel).html(index);
					});
					$(function () { $("[data-toggle='tooltip']").tooltip(); });
				},
			});
			// 单击行事件
