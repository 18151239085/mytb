	<style>
		#gridList {
			table-layout: fixed; /* 只有定义了表格的布局算法为fixed，下面td的定义才能起作用。 */
		}

			#gridList td {
				border-width: 1px;
				width: 100%;
				word-break: keep-all;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}

		#link {
			color: #2c8ea0;
			cursor: pointer;
		}
	</style>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/kendoui/js/kendo.all.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/lib/layui/layui.js"></script>
	<script src="~/lib/swiper/dist/js/swiper.js"></script>
	<script src="~/js/layer.js"></script>
	<script src="~/js/SmartFrame.js"></script>
	<script src="~/js/SmartFLowOperates.js"></script>
	<script src="~/lib/kendoui/js/cultures/kendo.culture.zh-CN.min.js"></script>
	<script src="~/lib/kendoui/js/messages/kendo.messages.zh-CN.min.js"></script>
	<script>
		//swiper
		var swiper = new Swiper('#swiper-single', {
			loop: true,
			speed: 600,
			grabCursor: true,
			parallax: true,
			autoplay: {
				delay: 3000,
				disableOnInteraction: false,
			},
			pagination: {
				el: '.swiper-pagination',
				clickable: true,
				renderBullet: function (index, className) {
					return '<span class="' + className + '">' + (index + 1) + '</span>';
				},
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
		});
		$(document).ready(function () {
			kendo.culture("zh-CN");
			$("#gridList").SmartGrid({
				dataSource: {
					batch: true,
					schema: {
						data: "Data",
						total: "Total"
					},
					transport: {
						type: "odata",
						read: {
							url: "/qian/home/gettzlist",
							contentType: "application/json",
							type: "POST"
						}, parameterMap: function (data, operation) {
							return JSON.stringify(data)
						},
					},
					//filter: { field: "F_LAYERS", operator: "eq", value: 1 }
				},
				height: 840,
				groupable: false,
				sortable: true,
				pageable: {
					refresh: true,
					pageSizes: true,
					buttonCount: 5
				},
				columns: [{
					field: "rowNumber",
					title: "序号",
					template: "<span class='row-number'></span>", width: 50
				},
				{
					field: "bt",
					title: "标题",
					template: '<a href="/qian/ftz/tail?keyValue=#:id#">#: bt #</a>',
					width: 200
				},
				{
					field: "sj",
					title: "时间",
					width: 100
				}

				],
				dataBound: function () {
					var rows = this.items();
					$(rows).each(function () {
						var index = $(this).index() + 1;
						var rowLabel = $(this).find(".row-number");
						$(rowLabel).html(index);
					});
					$(function () { $("[data-toggle='tooltip']").tooltip(); });
				},
			});
			// 单击行事件
			//$("#gridList").on('click', 'tr .link', function () {
			//	var grid = $('#gridList').data("kendoGrid");
			//	var row = $(this).closest("tr");
			//	var dataItem = grid.dataItem(row);
			//	var keyValue = dataItem.id;   //获取主键
			//	$.modalOpen({
			//		id: "Form",
			//		title: "帖子详细页面",
			//		url: "/qian/ftz/tail?keyValue=" + keyValue,
			//		width: "1024px",
			//		height: "1000px",
			//		callBack: function (iframeId) {

			//			top.frames[iframeId].submitForm(reloading);
			//		}
			//	});

			//});
		});
		function btn_ft() {
			$.ajax({
				url: "/qian/user/isLogin",
				type: "post",
				dataType: "json",
				success: function (data) {
					if (data) {
						$.modalOpen({
							id: "Form",
							title: "发帖页面",
							url: "/qian/ftz/ft?keyValue=0",
							width: "1200px",
							height: "600px",
							fullScreen: true,
							callBack: function (iframeId) {
								//点击确认按钮
								// 执行的函数
								top.frames[iframeId].submitForm(reloading);
							}
						});
					} else {
						window.location = "/qian/user/login";
					}
				}
			});

		}
		function reloading() {
			// 刷新当前页
			window.location.reload();
		}
	</script>
</body>
</html>