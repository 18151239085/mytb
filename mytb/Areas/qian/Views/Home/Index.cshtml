		});
		function btn_ft() {
			$.ajax({
				url: "/qian/user/isLogin",
				type: "post",
				dataType: "json",
				success: function (data) {
					if (data) {
						$.modalOpen({
							id: "Form",
							title: "发帖页面",
							url: "/qian/ftz/ft?keyValue=0",
							width: "1200px",
							height: "600px",
							fullScreen: true,
							callBack: function (iframeId) {
								//点击确认按钮
								// 执行的函数
								top.frames[iframeId].submitForm(reloading);
							}
						});
					} else {
						window.location = "/qian/user/login";
					}
				}
			});

		}
		function reloading() {
			// 刷新当前页
			window.location.reload();
		}
